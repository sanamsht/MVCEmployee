@model MVCEmployee.Models.ViewModel.LoginSignUpViewModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-4 offset-4 border border-primary rounded p-5">
            <div class="text-center">
                <h1 class="text-info">Login</h1>
            </div>
            <h6 class="text-success text-center">
                @TempData["successMessage"]
               
            </h6>
            <h6 class="text-danger text-center">
                @TempData["errorMessage"]

            </h6>
            <form method="post" asp-action="Login">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input type="text" asp-for="Username" placeholder="Enter Username" class="form-control" autocomplete="off"/>
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <span class="text-danger">@TempData["errorUsername"]</span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input id="password" type="password" asp-for="Password" class="form-control" autocomplete="off" placeholder="Enter Password" />
                    <i id="open" class="fa fa-eye float-end" style="margin-top:-25px; margin-right: 6px; cursor:pointer"></i>
                    <i id="closed" class="fa fa-eye-slash float-end" style="margin-top:-27px; margin-right: 6px; display:none; cursor:pointer"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <span class="text-danger">@TempData["errorPassword"]</span>
                </div>
                <div>
                    
                    <input type="checkbox" asp-for="IsRemember" />
                    <label asp-for="IsRemember" class="form-label"></label>
                </div>
                <dnt-captcha asp-captcha-generator-max="999999" 
                asp-captcha-generator-min="111111" 
                asp-captcha-generator-language="English" 
                asp-captcha-generator-display-mode="ShowDigits"
                asp-fore-color="#333332" 
                asp-back-color="#ccc" 
                asp-font-name="Tahoma" 
                asp-font-size="20" 
                asp-refresh-button-class="fa fa-redo" 
                asp-use-relative-urls="true" 
                asp-placeholder="Enter Captcha" 
                asp-text-box-class="text-box form-control" 
                asp-text-box-template="<span><span></span></span>{0}"
                asp-validation-message-class="text-danger"
                asp-use-noise="false" />
                <div class="mt-3">
                    <input type="submit" class="btn btn-block btn-primary mb-2" value="Log In"/>
                </div>
            </form>
            <div class="text-center">
                <a class="text-primary" asp-action="ForgotUsername">Forgot Username?</a> | <a class="text-primary" asp-action="ForgotPassword">Forgot Password?</a>
            </div>
            <div class="text-center">
                Don't have an account? <a class="text-primary font-weight-bold" asp-action="SignUp" asp-controller="User">Sign Up</a>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
        $("#open").click(function(){
            $("#open").hide();
            $("#closed").show();
            $("#password").attr("type", "text");
        });
        $("#closed").click(function () {
            $("#open").show();
            $("#closed").hide();
            $("#password").attr("type", "password");
        });
       
    })
    </script>